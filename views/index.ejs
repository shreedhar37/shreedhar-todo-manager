<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="/js/script.js" type="text/javascript"></script>
    <title>TO-DO Manager</title>
  </head>
  <body>
    <!-- ender the contents of header.js -->

    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <header><%- include('header.ejs') %></header>
        <form action="/todos" method="post">
          <div class="flex gap-2 py-4">
            <div class="flex-auto">
              <input
                type="text"
                name="title"
                placeholder="What's next?"
                class="border border-gray-300 w-full rounded p-2 text-sm"
                required
              />
            </div>
            <div class="flex-auto">
              <input
                type="date"
                name="dueDate"
                required
                class="border border-gray-300 w-full rounded p-2 text-sm leading-4"
              />
            </div>
            <div class="flex-none">
              <button
                type="submit"
                class="bg-green-600 text-white px-5 py-2 rounded font-medium mr-2 mb-2 py-1.5"
              >
                Add
              </button>
            </div>
          </div>
        </form>
        <br />

        <!-- render contents of todo.ejs -->
        <div>
          <div class="flex items-center mb-2">
            <h5>Overdue</h5>
            <span
              id="count-overdue"
              class="bg-gray-200 text-sm ml-2 px-2 rounded"
              >2</span
            >
          </div>
          <%- include("todos.ejs") %>
          <div class="flex items-center mb-2">
            <h5>Due Today</h5>
            <span
              id="count-due-today"
              class="bg-gray-200 text-sm ml-2 px-2 rounded"
              >0</span
            >
          </div>
          <div class="flex items-center">
            <h5>Due Later</h5>
            <span
              id="count-due-later"
              class="bg-gray-200 text-sm ml-2 px-2 rounded"
              >0</span
            >
          </div>
        </div>
      </div>
    </div>
    <!-- render the contents of footer.ejs  -->
    <!-- <footer><%- include("footer.ejs") %></footer> -->
  </body>
</html>
